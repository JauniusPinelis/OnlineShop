@page
@model Shop.UI.IndexModel
@{
    ViewData["Title"] = "Index";
}

    <div id="app">
        <div>
            <p v-for="(product, index) in products">
                {{product.id}} - {{product.name}} - {{product.description}} - {{product.value}}
                <a @@click="editProduct(product.id,index)">Edit</a>
                <a @@click="deleteProduct(product.id, index)">Remove</a>
            </p>
        </div>

        <div>
            <input v-model="productModel.name" />
            <input v-model="productModel.description" />
            <input v-model="productModel.value" />
            <button @@click="createProduct" v-if="!productModel.id">Create Product</button>
            <button @@click="updateProduct">Update Product</button>
        </div>
    </div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/main.js"></script>
}