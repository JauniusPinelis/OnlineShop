@page
@model Shop.UI.IndexModel
@{
    ViewData["Title"] = "Index";
}

    <div id="app">
        <input type="number" @@change="alert('hello')" name="name" v-model="price" />
        <button v-on:click="togglePrice">Toggle</button>
        <button v-on:click="getProducts">Get Products</button>
        <p v-show="formatPrice">
            {{price}}
        </p>
        <p v-if="formatPrice">
            {{formatPrice}}
        </p>

        <div>
            <p v-for="product in products">
                {{product.id}} - {{product.name}} - {{product.description}}
            </p>
        </div>
    </div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.11"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/main.js"></script>
}