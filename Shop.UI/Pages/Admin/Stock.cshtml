@page
@{
}

<div id="app" class="container">
    <div class="columns">
        <div class="column is-3">
            <table class="table">
                <tr v-for="product in products" @@click="selectProduct(product)">
                    <td>
                        {{product.id}} - {{product.description}}
                    </td>
                </tr>
            </table>
        </div>
        <div class="column is-6" v-if="selectedProduct">
            <table class="table">
                <tr v-for="stock in selectedProduct.stock">
                    <td>{{stock.description}}</td>
                    <td>{{stock.qty}}</td>
                </tr>
            </table>
            <a class="button is-warning">
                Update Products
            </a>
        </div>
        <div class="column is-3" v-if="selectProduct">
            <h2>New Stock</h2>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="newStock.description">
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="newStock.qty">
                </div>
            </div>
        </div>
        <a class="button is-success" @@click="addStock">Add</a>
    </div>
</div>

@section scripts {
    <script src="~/js/admin/stock.js" asp-append-version="true"></script>
}